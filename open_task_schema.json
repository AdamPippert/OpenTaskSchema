        "due_date": {
          "anyOf": [
            {
              "format": "date-time",
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Target completion date",
          "title": "Due Date"
        },
        "estimate": {
          "anyOf": [
            {},
            {
              "type": "null"
            }
